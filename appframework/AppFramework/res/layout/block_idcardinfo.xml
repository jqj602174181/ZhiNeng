<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
	<!-- 显示身份证信息的碎片 -->
     <TextView
         android:id="@+id/tv_person_info"
         android:layout_width="850dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:lineSpacingExtra="5dp"
         android:paddingEnd="10dp"
         android:paddingStart="30dp"
         android:layout_alignParentLeft="true"
         android:textColor="@color/framework_font_tip"
         android:textSize="25sp" />

     <ImageView
         android:layout_toRightOf="@id/tv_person_info"
         android:id="@+id/iv_photo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="10dp"
         android:contentDescription="@string/app_name" />
     
     <LinearLayout 
         android:visibility="gone"
         android:id="@+id/LINEAR_EditLayout"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_marginRight="50dp"
         android:layout_centerInParent="true"
         android:gravity="center_vertical"
         
         >

         <Button
             android:id="@+id/BTN_IDCardEidtCard"
             android:layout_width="150dp"
             android:layout_height="150dp"
             android:layout_marginRight="50dp"
             android:background="@drawable/editcard_btn_selector"
             android:text="@string/clickEditCard"
             android:textColor="@color/framework_text_color"
             android:textSize="30sp" />

         <Button 
             android:id="@+id/BTN_IDCardReadCard"
             android:layout_width="150dp"
             android:layout_height="150dp"
             android:textSize="30sp"
             android:background="@drawable/editcard_btn_selector"
             android:textColor="@color/framework_text_color"
             android:text="@string/clickReadCard"
             />
     </LinearLayout>

</RelativeLayout>
