<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 读二代证测试 -->
    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
         android:id="@+id/tv_person_info"
         android:layout_width="900dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="20dp"
         android:layout_marginTop="20dp"
         android:lineSpacingExtra="5dp"
         android:paddingEnd="10dp"
         android:paddingStart="30dp"
         android:textColor="@color/font_tip"
         android:textSize="25sp" />

	     <ImageView
	         android:id="@+id/iv_photo"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginStart="10dp"
	         android:layout_marginTop="20dp"
	         android:contentDescription="@string/app_name" />

	    
    </LinearLayout>
    <Button android:id="@+id/BTN_READ_IDCARD"
	        android:layout_width="200dp"
	        android:layout_height="50dp"
	        android:layout_gravity="center_horizontal"
	        android:text="读二代证"
	        android:textSize="30sp"/>
    
    <!-- 读磁卡测试 -->
    <TextView android:id="@+id/LABEL_MSGCARD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        />
   <Button android:id="@+id/BTN_READ_MAGCARD"
       android:layout_width="200dp"
       android:layout_height="50dp"
       android:text="读磁卡"
       android:textSize="30sp"
       android:layout_gravity="center_horizontal"/>
   
   <Button android:id="@+id/BTN_READ_ICCARD"
       android:layout_width="200dp"
       android:layout_height="50dp"
       android:text="读IC卡"
       android:textSize="30sp"
       android:layout_gravity="center_horizontal"/>
   
   <Button android:id="@+id/BTN_TEST_PRINTER"
       android:layout_width="200dp"
       android:layout_height="50dp"
       android:text="测试打印机"
       android:textSize="30sp"
       android:layout_gravity="center_horizontal"/>
   
     <Button android:id="@+id/BTN_TEST_SelectCard"
       android:layout_width="200dp"
       android:layout_height="50dp"
       android:text="选择卡"
       android:textSize="30sp"
       android:layout_gravity="center_horizontal"/>
</LinearLayout>
